<!DOCTYPE html>
<html ng-app="WorldieApp">
<head>
  <meta charset="utf8">
  <title>Worldie</title>

  <!-- External JS Resources -->
  <script src="/vendor/jquery/dist/jquery.min.js"></script>
  <script src="/vendor/bootstrap/dist/js/bootstrap.min.js"></script>
  <script src="/vendor/angular/angular.min.js"></script>
  <script src="/vendor/angular-resource/angular-resource.min.js"></script>  
  <script src="/vendor/angular-ui-router/release/angular-ui-router.min.js"></script>  
  <script src="/vendor/angular-jwt/dist/angular-jwt.min.js"></script>
  <script src="/vendor/satellizer/satellizer.min.js"></script>
  <script src="/vendor/jquery-panorama/jquery.panorama_viewer.js"></script>
  <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBxM36DxD-TmmCuWMML0UXBVSirOUkF42Q&libraries=places"></script>



  <!-- Internal JS Resources -->
  <script src="/js/client.js"></script>
  <script src="/js/controllers/users.js"></script>
  <script src="/js/controllers/positions.js"></script>
  <script src="/js/controllers/scores.js"></script>
  <script src="/js/services/oauthKeys.js"></script>
  <script src="/js/services/token.js"></script>
  <script src="/js/models/position.js"></script>
  <script src="/js/models/user.js"></script>
  <script src="/js/models/score.js"></script>

  <!-- Style -->
  <link rel="stylesheet" type="text/css" href="/vendor/bootstrap/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/style.css" media="screen" title="no title" charset="utf-8">
  <link rel="stylesheet" href="/css/panorama_viewer.css" media="screen" title="no title" charset="utf-8">
  <link href='https://fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'>

</head>

<body ng-controller="UserController as user">

  <div ng-hide="user.isLoggedIn()">
    <div class="panorama">
      <img class="background" ng-src="./images/london_at_night_panorama-wallpaper-5120x1600.jpg">
      <button class="facebook" ng-click="user.authenticate('facebook')"><i class="fa fa-facebook-square"></i> Sign in with Facebook to play ! </button>
      <div class="splash-logo"><h1>Landmark</h1></div>
    </div>
  </div>


  <div ng-show="user.isLoggedIn()">

    <nav>
      <div class="navhome">Home Hello</div>
      <div class="navcart">{{user.currentUser.name}}</div>
      <div class="logout" ng-click="user.logout()">Logout</div>
    </nav>

    <img class="pp" ng-src="{{ user.currentUser.picture }}">

    <div ng-controller="PositionsController as position">

      <div class="scores">
        <div class="score1" >Player - {{ position.playerScore }}</div>
        <li ng-repeat="score in position.scores"><strong>{{ score.user.name }} - {{ score.score }}</strong></li>
      </div>

      <div id="street-view"></div>

      <div class="progress">
        <div class="progress-bar" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%;">
        <span class="sr-only">60% Complete</span>
        </div>
      </div>

      <li ng-repeat="user in user.all"><strong>{{user.name}} {{</strong></li>

      <div id="screen" class="ng-hide" ng-hide="position.showscreen">{{ position.timer}}</div>

      <form id="new-country-form" class="input-group" ng-submit="position.matchCountry()">
        <input class="form-control ng-hide" ng-hide="position.newcountryinput" placeholder="Enter country name here" ng-model="position.countryinput" type="text" id="country"  ng-focus="position.initAutocomplete()" >
      </form>

      <form id="new-city-form" class="input-group" ng-submit="position.matchCity()">
        <input class="form-control ng-hide" ng-hide="position.newcityinput" autocomplete="off" placeholder="Enter city name here" ng-model="position.cityinput">
      </form>

      <div id="welcomescreen" class="ng-hide" ng-hide="position.welcomescreen">
        <h1>World !</h1>
        <h3>Find where you are in the world ! </h3>
        <button ng-click="position.startClock()"class="play">Start</button>
      </div>

      <button class="next ng-hide" ng-hide="position.next" ng-click="position.getPanorama()">Next</button>

    </div>

  </div>




  </body>
</html>